{
	"name": "ahoy-hardhat",
	"version": "0.0.0",
	"description": "ahoy plugin for hardhat",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"ahoy": "dist/cli.cjs"
	},
	"devDependencies": {
		"ahoy": "workspace:*",
		"hardhat": "^2.14.1",
		"rimraf": "^4.4.1",
		"tsup": "^6.7.0",
		"typescript": "^4.9.5"
	},
	"peerDependencies": {
		"ahoy": "workspace:*"
	},
	"scripts": {
		"build": "rimraf dist && tsup --entry src/index.ts --entry src/cli.ts --dts --format esm,cjs",
		"dev": "rimraf dist && tsup --entry src/index.ts --entry src/cli.ts --dts --format esm,cjs --watch"
	}
}
